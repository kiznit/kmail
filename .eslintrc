{
    settings: {
        import/resolver: {
            webpack: {
                config: "webpack.server.babel.js"
            }
        }
    },

    env: {
        browser: true,
        es6: true,
        node: true,
        jest: true,
    },

    extends: "airbnb",

    rules: {
        arrow-body-style: 0,
        comma-dangle: [2, "always-multiline"],
        indent: [2, 4],
        max-len: [1, { code: 120, ignoreComments: true }],
        object-curly-newline: 0,
        react/jsx-indent: [2, 4],
        react/jsx-indent-props: [2, 4],
    }
}
