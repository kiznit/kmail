{
  "name": "react-redux-ssr-hmr",
  "version": "0.0.1",
  "description": "Thierry's React/Redux/SSR/HMR Starter Kit",
  "repository": "git://github.com/kiznit/react-redux-ssr-hmr.git",
  "author": "Thierry Tremblay <kiznit@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server/server.js",
    "build": "yarn clean && yarn build-server && yarn build-client && yarn build-static",
    "build-client": "webpack --config webpack.client.babel.js --mode production",
    "build-server": "webpack --config webpack.server.babel.js --mode production",
    "build-static": "mkdirp dist/server && cp -R public/ dist/",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .js,.jsx *.js src"
  },
  "dependencies": {
    "express": "^4.16.4",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "prop-types": "^15.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
