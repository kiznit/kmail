{
  "name": "kmail",
  "version": "0.0.1",
  "description": "Kzinti's Mail",
  "repository": "git://github.com/kiznit/kmail.git",
  "author": "Thierry Tremblay",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server/server.js",
    "start-dev": "cross-env NODE_ENV=development babel-node src/server",
    "clean": "rm -rf dist && mkdir dist",
    "dist": "yarn run build",
    "build": "yarn run clean && yarn run build-bundle && yarn run build-server && yarn run build-static",
    "build-bundle": "cross-env NODE_ENV=production webpack --config webpack.production.babel.js",
    "build-server": "cross-env NODE_ENV=production babel src --ignore client.js -d dist/server -s",
    "build-static": "cp -R public/ dist/"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.5.1",
    "cross-env": "^5.1.3",
    "express": "^4.16.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-pack": "^0.1.5",
    "universal-router": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-bluebird": "^1.1.1",
    "babel-plugin-transform-promise-to-bluebird": "^1.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chokidar": "^2.0.0",
    "react-hot-loader": "^3.1.3",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0"
  }
}
